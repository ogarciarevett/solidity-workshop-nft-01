{
    "name": "solidity-workshop-nft-01",
    "version": "1.0.0",
    "description": "Solidity Workshop NFT 01",
    "main": "index.js",
    "scripts": {
        "deploy:ignition:sei:testnet": "pnpm compile && pnpm hardhat ignition deploy ignition/modules/Seimon.ts --network seitestnet",
        "deploy:ignition:sei:mainnet": "pnpm compile && pnpm hardhat ignition deploy ignition/modules/Seimon.ts --network sei",
        "deploy:sei:mainnet": "pnpm compile && hardhat deploy --network sei",
        "deploy:sei:testnet": "pnpm compile && hardhat deploy --network seitestnet",
        "analysis": "slither contracts --exclude-dependencies --exclude-informational --exclude-low --exclude-medium --exclude-high",
        "fuzzing": "./run-fuzz.sh",
        "test": "REPORT_GAS=true hardhat test test/*.ts --network hardhat",
        "test:ci": "hardhat test test/*.ts  --network hardhat",
        "lint": "eslint . --fix",
        "solhint": "solhint ./contracts/**/*.sol",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "compile": "hardhat compile",
        "coverage": "SOLIDITY_COVERAGE=true hardhat coverage"
    },
    "keywords": [
        "solidity",
        "workshop",
        "nft",
        "chainlink",
        "01"
    ],
    "author": "0xmar(@ogarciarevett)",
    "license": "Apache-2.0",
    "packageManager": "pnpm@10.11.0",
    "devDependencies": {
        "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
        "@nomicfoundation/hardhat-ignition": "^0.15.13",
        "@nomicfoundation/hardhat-ignition-viem": "^0.15.13",
        "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
        "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
        "@nomicfoundation/hardhat-verify": "^2.1.1",
        "@nomicfoundation/hardhat-viem": "^2.1.1",
        "@types/chai": "^4.3.20",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.5.0",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "chai": "^4.5.0",
        "dotenv": "^16.6.1",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-mocha": "^11.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unused-imports": "^4.2.0",
        "hardhat": "^2.26.3",
        "hardhat-gas-reporter": "^1.0.10",
        "prettier": "^3.6.2",
        "prettier-plugin-solidity": "^2.1.0",
        "solhint": "^5.2.0",
        "solhint-plugin-prettier": "^0.1.0",
        "solidity-coverage": "^0.8.16",
        "typescript": "^5.9.2",
        "viem": "^2.37.6"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.4.0"
    }
}
