{
    "name": "contracts",
    "version": "1.0.0",
    "description": "Custom audit attacks and test smart contracts - evm",
    "main": "index.js",
    "scripts": {
        "deploy:ignition:sei:testnet": "pnpm compile && pnpm hardhat ignition deploy ignition/modules/NFTMarketplace.ts --network seitestnet",
        "deploy:ignition:sei:mainnet": "pnpm compile && pnpm hardhat ignition deploy ignition/modules/NFTMarketplace.ts --network sei",
        "deploy:sei:mainnet": "pnpm compile && hardhat deploy --network sei",
        "deploy:sei:testnet": "pnpm compile && hardhat deploy --network seitestnet",
        "analysis": "slither contracts --exclude-dependencies --exclude-informational --exclude-low --exclude-medium --exclude-high",
        "fuzzing": "./run-fuzz.sh",
        "test": "REPORT_GAS=true hardhat test test/*.ts --network hardhat",
        "test:ci": "hardhat test test/*.ts  --network hardhat",
        "lint": "eslint . --fix",
        "solhint": "solhint ./contracts/**/*.sol",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "compile": "hardhat compile",
        "coverage": "SOLIDITY_COVERAGE=true hardhat coverage"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.11.0",
    "devDependencies": {
        "@nomicfoundation/hardhat-ignition": "^0.15.11",
        "@nomicfoundation/hardhat-ignition-viem": "^0.15.11",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
        "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.14",
        "@nomicfoundation/hardhat-viem": "^2.0.6",
        "@types/chai": "^4.3.20",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.3",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@typescript-eslint/parser": "^8.34.1",
        "chai": "^4.5.0",
        "dotenv": "^16.5.0",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-mocha": "^11.1.0",
        "eslint-plugin-prettier": "^5.5.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "hardhat": "^2.24.3",
        "hardhat-gas-reporter": "^1.0.10",
        "prettier": "^3.5.3",
        "prettier-plugin-solidity": "^2.0.0",
        "solhint": "^5.1.0",
        "solhint-plugin-prettier": "^0.1.0",
        "solidity-coverage": "^0.8.16",
        "typescript": "~5.0.4",
        "viem": "^2.31.3"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^5.3.0"
    }
}
